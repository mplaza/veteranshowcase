Keywords: 
<% @keywords.each do |k| %>
	<%= k.searchterm %> 
	<%= link_to 'Delete', keyword_path(k), method: :delete, data: {confirm: "Are you sure you want to delete this permanently?"} %>

<% end %>

<%= form_for @keyword, url: new_keyword_path do |f| %>
	New Keyword <%= f.text_field :searchterm %><br />
	<%= f.submit %>
<% end %>

